{
  "compilerOptions": {
    "target": "es2020", // Modern target for AWS Lambda Node.js runtimes
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true, // Recommended for Lambda
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true, // Helpful for debugging in Lambda
    "experimentalDecorators": true, // Needed for TypeORM decorators
    "emitDecoratorMetadata": true // Needed for TypeORM
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}